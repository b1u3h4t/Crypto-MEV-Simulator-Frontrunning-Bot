# Ethereum RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
FLASHBOTS_RELAY=https://relay.flashbots.net
ANVIL_URL=http://localhost:8545

# Simulation Parameters
SIMULATION_MODE=realtime
MEMPOOL_EMULATION=true
BLOCK_SIMULATION=true
HISTORICAL_REPLAY=false

# Performance Settings
THREAD_POOL_SIZE=16
QUEUE_SIZE=10000
LATENCY_TARGET_US=100
MAX_CONCURRENT_REQUESTS=100

# Strategy Parameters
ARBITRAGE_MIN_PROFIT_ETH=0.01
SANDWICH_MIN_PROFIT_ETH=0.005
FRONTRUN_GAS_MULTIPLIER=1.1
MAX_GAS_PRICE_GWEI=100
PRIORITY_FEE_GWEI=2.0

# Database & Caching
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=true
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mev_sim.log
ENABLE_METRICS=true
METRICS_PORT=8080

# Data Storage
DATA_DIR=./data
RESULTS_DIR=./data/results
TX_DATA_DIR=./data/tx_data

# Network Settings
REQUEST_TIMEOUT_MS=5000
RETRY_ATTEMPTS=3
RATE_LIMIT_RPS=100

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE_MB=10
ENABLE_SSL_VERIFICATION=true

# Development
DEBUG_MODE=false
PROFILE_MODE=false
ENABLE_VISUALIZATION=true
